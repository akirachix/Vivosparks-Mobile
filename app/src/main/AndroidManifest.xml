            android:name="com.akirachix.investikaTrial.ui.StockpriceActivity"
            android:exported="false" />
        <activity
            android:name="com.akirachix.investikaTrial.ui.SafaricompriceActivity"
            android:exported="false" />
        <activity
            android:name="com.akirachix.investikaTrial.ui.CongratulationsActivity"
            android:exported="false" />
        <activity
            android:name="com.akirachix.investikaTrial.ui.EarningActivity"
            android:exported="false" />
        <activity
            android:name="com.akirachix.investikaTrial.ui.LivestocksActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>