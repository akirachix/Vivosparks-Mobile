<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="InvestikaTrial"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:theme="@style/Theme.InvestikaTrial">

        <!-- MainActivity definition -->
        <activity
            android:name="com.akirachix.investikaTrial.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.akirachix.investikaTrial.ui.HighRiskPaths"
            android:exported="false">

        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.PathDecisionActivity"
            android:exported="false">

        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.BattleActivity"
            android:exported="false">

        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.BattleQuizActivity"
            android:exported="false">

        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.SlayDragonActivity"
            android:exported="false">

        </activity>


        <activity
            android:name="com.akirachix.investikaTrial.ui.DefeatedActivity"
            android:exported="false">

        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.ProfileActivity"
            android:exported="false">

        </activity>

    </application>

</manifest>
