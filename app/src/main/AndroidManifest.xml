<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34"
        tools:ignore="GradleOverrides" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="InvestikaTrial"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InvestikaTrial"
        tools:replace="android:allowBackup"
        tools:targetApi="31">

        <!-- MainActivity definition -->
        <activity
            android:name="com.akirachix.investikaTrial.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.SplashScreenActivity"
            android:exported="true"
            tools:ignore="MissingClass">
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.HighRiskPaths"
            android:exported="false">
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.PathDecisionActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.BattleActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.BattleQuizActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.SlayDragonActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.DefeatedActivity"
            android:exported="false">
        </activity>

        <activity
            android:name="com.akirachix.investikaTrial.ui.ProfileActivity"
            android:exported="false">
        </activity>

        <uses-library android:name="com.google.android.maps" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-com.akirachix.investikatrial" />
    </application>

</manifest>
