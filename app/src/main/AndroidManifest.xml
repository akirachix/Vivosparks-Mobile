        android:theme="@style/Theme.InvestikaTrial"

        tools:targetApi="31">
        <activity
            android:name="com.akirachix.investikaTrial.ui.ResultsActivity"
            android:exported="false" />

        <activity
            android:name="com.akirachix.investikaTrial.ui.AssessmentActivity"
            android:exported="false" />
        <activity
            android:name="com.akirachix.investikaTrial.ui.CorporateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.akirachix.investikaTrial.ui.LuckyActivity"
            android:exported="false" />
        <activity
            android:name="com.akirachix.investikaTrial.ui.CoinActivity"
            android:exported="false" />
