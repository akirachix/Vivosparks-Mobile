<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background and padding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background"
        android:padding="16dp">

        <!-- Total Coins Display -->
        <TextView
            android:id="@+id/tvTotalCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_coins_0"
            android:textSize="24sp"
            android:textColor="@android:color/holo_orange_light"
        android:background="#06111D"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_sans_bold"
        android:layout_marginBottom="16dp"
        android:padding="8dp" /> <!-- Added padding for better appearance -->

        <!-- Question Text -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageQuestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true" />

        <!-- Option Buttons -->
        <Button
            android:id="@+id/btnOptionA"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/corners"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/nunito_sans_bold"
            android:padding="5dp"
            android:text="Option A"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnOptionB"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/corners"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/nunito_sans_bold"
            android:padding="5dp"
            android:text="Option B"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnOptionC"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/corners"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/nunito_sans_bold"
            android:padding="5dp"
            android:text="Option C"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnOptionD"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/corners"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/nunito_sans_bold"
            android:padding="4dp"
            android:text="Option D"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Coin Animation Container -->
    <FrameLayout
        android:id="@+id/coin_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
