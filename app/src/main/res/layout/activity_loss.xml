<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="768dp"
        android:layout_height="963dp"
        android:src="@drawable/secondbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="26dp"
        android:text="You lost your balance and fell!!"
        android:fontFamily="@font/nunito_sans_bold"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sageImageView"
        android:layout_width="226dp"
        android:layout_height="293dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/loss"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/congratulationsTextView"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="You lose 200 virtual coins!"
        android:fontFamily="@font/nunito_sans_bold"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sageImageView"
        app:layout_constraintTop_toBottomOf="@+id/sageImageView" />

    <TextView
        android:id="@+id/adviseTextView"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Medium-risk investments require careful consideration and balance"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_sans_bold"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/congratulationsTextView" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="#003566"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adviseTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>
