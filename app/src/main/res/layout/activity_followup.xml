<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="768dp"
        android:layout_height="963dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.501">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop" />

        <!-- Overlay View -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#20000000" /> <!-- 50% transparent black -->

    </FrameLayout>


    <Button
        android:id="@+id/button1"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/corners"
        android:backgroundTint="#FFFFFF"
        android:padding="5dp"
        android:textAlignment="center"
        android:text="I don’t fully understand high-risk investments yet"
        android:textColor="#040101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/corners"
        android:backgroundTint="#FFFFFF"
        android:padding="8dp"
        android:text="I’m comfortable with safer options"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#050202"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/corners"
        android:backgroundTint="#FFFFFF"
        android:padding="10dp"
        android:text="I want to protect my current wealth"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#050404"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="Why have you decided to pay the dragon?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/corners"
        android:backgroundTint="#FFFFFF"
        android:padding="5dp"
        android:text="I prefer to avoid high risks"
        android:textColor="#050505"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        android:textSize="18sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
