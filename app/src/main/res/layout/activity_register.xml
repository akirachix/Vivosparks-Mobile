<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akirachix.investikaTrial.ui.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="815dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bgsignup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Join The Quest"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="60dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/nunito_bold"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#646262"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/titleText"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/titleText"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <EditText
            android:id="@+id/idUserName"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/nunito_bold"
            android:hint="Enter Username"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#646262"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/emailEditText"
        app:layout_constraintStart_toStartOf="@+id/emailEditText"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/nunito_bold"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#646262"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/idUserName"
        app:layout_constraintStart_toStartOf="@+id/idUserName"
        app:layout_constraintTop_toBottomOf="@+id/idUserName" />

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/nunito_bold"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#646262"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/passwordEditText"
        app:layout_constraintStart_toStartOf="@+id/passwordEditText"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Proceed"
            android:textAlignment="center"
            android:textColor="#003566"
            android:textSize="18sp"
            app:backgroundTint="#FFC107"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="@+id/confirmpassword"
            app:layout_constraintStart_toStartOf="@+id/confirmpassword"
            app:layout_constraintTop_toBottomOf="@+id/confirmpassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
