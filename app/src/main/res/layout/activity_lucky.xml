<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/congratsbg"
    tools:context="com.akirachix.investikaTrial.ui.CoinActivity">


  <TextView
      android:id="@+id/tv_congratulations"
      android:layout_width="333dp"
      android:layout_height="50dp"
      android:layout_marginTop="112dp"
      android:fontFamily="@font/nunito_bold"
      android:text="Better luck next \n time!"
      android:textColor="#FFC300"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.666"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tv_profit_gained"
      android:layout_width="333dp"
      android:layout_height="50dp"
      android:layout_marginTop="196dp"
      android:fontFamily="@font/nunito_bold"
      android:text="You've experienced \n a loss"
      android:textColor="#FFC300"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.666"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tv_number_of_coins"
      android:layout_width="333dp"
      android:layout_height="50dp"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/nunito_bold"
      android:text="The number of coins"
      android:textColor="#FFFFFF"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.666"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_profit_gained" />

  <TextView
      android:id="@+id/tv_in_your_account"
      android:layout_width="333dp"
      android:layout_height="50dp"
      android:layout_marginTop="12dp"
      android:fontFamily="@font/nunito_bold"
      android:text="in your account"
      android:textColor="#FFFFFF"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.666"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_number_of_coins" />

  <TextView
      android:id="@+id/tv_increased_by"
      android:layout_width="333dp"
      android:layout_height="50dp"
      android:layout_marginTop="16dp"
      android:fontFamily="@font/nunito_bold"
      android:text="has increased by"
      android:textColor="#FFFFFF"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.666"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_in_your_account" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_invest"
      android:layout_width="150dp"
      android:layout_height="70dp"
      android:layout_margin="16dp"
      android:backgroundTint="#FFC300"
      android:clipToOutline="true"
      android:elevation="4dp"
      android:textSize="20dp"

      android:fontFamily="@font/nunito_semibold"
      android:padding="16dp"
      android:text="Invest"
      android:textAllCaps="false"
      android:textColor="#003566"
      app:cornerRadius="36dp"
      app:layout_constraintBottom_toBottomOf="@+id/btnAccountCoins"
      app:layout_constraintEnd_toStartOf="@+id/btnAccountCoins"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/btnAccountCoins" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnAccountCoins"
      android:layout_width="150dp"
      android:layout_height="70dp"
      android:layout_margin="16dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="132dp"
      android:layout_marginBottom="82dp"
      android:backgroundTint="#FFC300"
      android:clipToOutline="true"
      android:elevation="4dp"
      android:fontFamily="@font/nunito_semibold"
      android:padding="16dp"
      android:text="Open Account"
      android:textSize="20dp"
      android:textAllCaps="false"
      android:textColor="#003566"
      app:cornerRadius="36dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btn_invest"
      app:layout_constraintTop_toBottomOf="@+id/tv_coins" />

  <TextView
      android:id="@+id/tv_coins"
      android:layout_width="236dp"
      android:layout_height="51dp"
      android:layout_marginTop="44dp"
      android:fontFamily="@font/nunito_bold"
      android:text="30.00 Coins"
      android:textColor="#FFC300"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="@+id/tv_increased_by"
      app:layout_constraintHorizontal_bias="0.618"
      app:layout_constraintStart_toStartOf="@+id/tv_increased_by"
      app:layout_constraintTop_toBottomOf="@+id/tv_increased_by" />

</androidx.constraintlayout.widget.ConstraintLayout>
