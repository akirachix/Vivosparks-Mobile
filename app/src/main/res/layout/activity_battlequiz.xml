<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/battlequiz">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="313dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:text="What does it mean to diversify your investments?"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button12"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/boarder_radius"
        android:backgroundTint="#FFFFFF"
        android:text="Put money in one place"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button16"
        app:layout_constraintStart_toStartOf="@+id/button16" />

    <Button
        android:id="@+id/button16"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/boarder_radius"
        android:backgroundTint="#FFFFFF"
        android:text="Borrow money"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button15"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/boarder_radius"
        android:backgroundTint="#FFFFFF"
        android:text="Keep cash at home"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        app:layout_constraintEnd_toEndOf="@+id/button12"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button12" />

    <Button
        android:id="@+id/button14"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/boarder_radius"
        android:backgroundTint="#FFFFFF"
        android:text="Spread money across investments"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintEnd_toEndOf="@+id/button15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button15" />

</androidx.constraintlayout.widget.ConstraintLayout>