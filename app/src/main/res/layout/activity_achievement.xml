<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akirachix.investikaTrial.ui.AchievementActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="644dp"
        android:layout_height="982dp"
        app:srcCompat="@drawable/bgone"
        tools:layout_editor_absoluteX="-104dp"
        tools:layout_editor_absoluteY="-184dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/crown" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="214dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:text="Achievements"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:layout_editor_absoluteX="112dp" />

    <TextView
        android:id="@+id/rext"
        android:layout_width="318dp"
        android:layout_height="181dp"
        android:layout_marginTop="108dp"
        android:text="Congratulations!!, brave investor! Now  that you've mastered  the art of low-risk  investing, it's  time to face the real  market."
        android:textAlignment="center"
        android:textColor="#D8D6D1"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />
</androidx.constraintlayout.widget.ConstraintLayout>