<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akirachix.investikaTrial.ui.MarketActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="892dp"
        android:layout_height="855dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person" />

    <Button
        android:id="@+id/button5_1"
        android:layout_width="95dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="8.99%"
        app:layout_constraintEnd_toEndOf="@+id/button5_1"
        app:layout_constraintStart_toEndOf="@+id/button4_1"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/button4_1"
        android:layout_width="99dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="KES 100  B"
        app:layout_constraintEnd_toStartOf="@+id/button5_1"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button4_2" />

    <TextView
        android:id="@+id/rext"
        android:layout_width="326dp"
        android:layout_height="83dp"
        android:layout_marginTop="32dp"
        android:text="Money Market Funds"
        android:textAlignment="center"
        android:textColor="#D8D6D1"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="102dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="FXD1/ 2024/005"
        app:layout_constraintStart_toStartOf="@+id/rext"
        app:layout_constraintTop_toBottomOf="@+id/rext" />

    <Button
        android:id="@+id/button4_2"
        android:layout_width="99dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="KES 100  B"
        app:layout_constraintTop_toBottomOf="@+id/rext"
        tools:layout_editor_absoluteX="156dp" />

    <Button
        android:id="@+id/button5_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.99%"
        app:layout_constraintEnd_toEndOf="@+id/rext"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button4_2"
        tools:layout_editor_absoluteY="139dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:text="FXD1/ 2024/005"
        app:layout_constraintEnd_toStartOf="@+id/button4_1"
        app:layout_constraintStart_toStartOf="@+id/button"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:id="@+id/investment"
        android:layout_width="326dp"
        android:layout_height="83dp"
        android:layout_marginTop="120dp"
        android:text="How much are you willing to invest?"
        android:textAlignment="center"
        android:textColor="#D8D6D1"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4_2" />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="304dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Enter amount..."
        android:padding="12dp"
        android:textColorHint="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/investment" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/marketbtn"
        android:layout_width="162dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:text="Proceed"
        android:textColor="#003566"
        app:backgroundTint="#FFC107"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameInput" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/crown" />

</androidx.constraintlayout.widget.ConstraintLayout>
